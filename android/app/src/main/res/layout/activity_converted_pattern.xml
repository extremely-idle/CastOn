<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_converted_pattern"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rossmoug.caston.ConvertedPatternActivity">

    <TextView
        android:text="Your Pattern Conversion Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headerText"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfRowsText"
        app:layout_constraintLeft_toLeftOf="@+id/headerText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/headerText"
        android:text="Number of Rows:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfRowsData"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:text="Number of Stitches:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfStitchesText"
        app:layout_constraintLeft_toLeftOf="@+id/numberOfRowsText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/numberOfRowsText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberOfStitchesData"
        app:layout_constraintLeft_toLeftOf="@+id/numberOfRowsData"
        app:layout_constraintTop_toTopOf="@+id/numberOfStitchesText"
        app:layout_constraintBottom_toBottomOf="@+id/numberOfStitchesText" />

</android.support.constraint.ConstraintLayout>
